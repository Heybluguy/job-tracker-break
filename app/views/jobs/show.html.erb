Title: <%= @job.title %>
<br>

Description: <%= @job.description %>
<br>

Level of Interest: <%= @job.level_of_interest %>
<br>

City: <%= @job.city %>
<br>

Company: <%= link_to @job.company.name, company_path(@job.company) %>

<%= form_for [@job.company, @job, @comment] do |f| %>
  <%= f.label :content %><br>
  <%= f.text_field :content %>
  <%= f.submit "Post Comment" %>
<% end %>

<% @job.comments.reverse_each do |comment| %>
  <p>
    <%= comment.content %>
    <li>Created At <%= comment.created_at %></li>
    <li>Updated At <%=  comment.updated_at %></li>
  </p><br>
<% end %>